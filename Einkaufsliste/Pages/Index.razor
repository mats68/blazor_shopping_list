@page "/"
@inherits IndexBase

<div style="max-width:700px">
    <ListExt ListExtViewModel="ListServices.ListEinkauf" NewItemText="Was willst du einkaufen ?" ShowIsDoneButton="true" IsBoldText="true">
        <HeaderButtons>
            <button @onclick="ShowFavoriten" class="btn btn-warning" title="Favoriten"><span class="oi oi-star" /> </button>
            @if (ListServices.ListEinkauf.AllItemsDone)
            {
                <button @onclick="Archive" class="btn btn-info" title="Liste archivieren"><span class="oi oi-file" /> </button>
            }
        </HeaderButtons>
    </ListExt>
</div>

@if (ShowFavoritenModal)
{
<Modal Title="Favoriten einfügen" OnCloseClick="CloseFavoriten">
    <ModalHeader>
        <div class="row">
            <div class="col">
                <button @onclick="InsertFavoriten" class="btn btn-lg btn-primary">Ok</button>
            </div>
        </div>
    </ModalHeader>
    <ModalBody>
        <div>
            <ListExt ListExtViewModel="ListServices.ListFavoriten" HideHeader="true" IsMultiSelect="true">
            </ListExt>
        </div>
    </ModalBody>
</Modal>
}
